{
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "lib": ["es6", "es7", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    //    "outDir": "lib",
    "sourceMap": true,
    "target": "es6",
    "removeComments": true,
    "strict": true,
    //  "strictNullChecks": false,
    //  "noImplicitAny": false,
    //  "suppressImplicitAnyIndexErrors": true,
    "downlevelIteration": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib/**/*.ts", "lib-esm", "**/_t/*"]
}
