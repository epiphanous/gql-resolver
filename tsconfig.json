{
  "compilerOptions": {
    "declaration":                      true,
    "declarationDir":                   "dist",
    "experimentalDecorators":           true,
    "forceConsistentCasingInFileNames": true,
    "lib":                              [
      "esnext"
    ],
    "module":                           "commonjs",
    "moduleResolution":                 "node",
    "noEmitOnError":                    true,
    "outDir":                           "dist/cjs",
    "sourceMap":                        true,
    "strictPropertyInitialization":     false,
    "target":                           "es5",
    "removeComments":                   true,
    "strict":                           true,
    "downlevelIteration":               true
  },
  "include":         [
    "src/**/*.ts"
  ],
  "exclude":         [
    "node_modules",
    "lib/**/*.ts",
    "lib-esm",
    "**/_t/*"
  ]
}
